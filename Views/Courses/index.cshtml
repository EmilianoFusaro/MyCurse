@model List<CourseViewModel>

 <!-- Vista fortemente titpizzata    -->

<!-- @{
    Layout="_Layout";
} -->
<h1>@ViewData["Title"]</h1>    

<!-- for (int i = 1; i <=10; i++) -->
@foreach (CourseViewModel course in Model)
{
<div class="row">
    <div class="col-md-1">
        <img src="@course.ImagePath" height="50px">        
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author</author>
    </div>
    <div class="col-md-2" title="@course.Rating">
        @for (int i = 1; i <=5; i++)
        {
            if (course.Rating>=i)
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating >i-1)
            {
             <i class="fas fa-star-half-alt"></i>
            }
            else
            {
                <i class="far fa-star"></i>
            }
        }
    </div>
    <div class="col-md-2">
        @course.CurrentPrice<br/>
        @if(!course.CurrentPrice.Equals(course.FullPrice)){
        <s>@course.FullPrice</s>
        }        
    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>
    </div>    
</div>
}

